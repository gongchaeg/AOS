<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/peeka_beige"
        tools:context=".presentation.detail.DetailActivity">

        <ImageView
            android:id="@+id/ic_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="51dp"
            android:src="@drawable/ic_detail_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ic_detail_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_detail_edit"
            app:layout_constraintBottom_toBottomOf="@id/ic_detail_back"
            app:layout_constraintEnd_toStartOf="@id/ic_detail_delete"
            app:layout_constraintTop_toTopOf="@id/ic_detail_back" />

        <ImageView
            android:id="@+id/ic_detail_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="22dp"
            android:src="@drawable/ic_detail_delete"
            app:layout_constraintBottom_toBottomOf="@id/ic_detail_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ic_detail_back" />

        <ImageView
            android:id="@+id/iv_detail_book_cover"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginTop="100dp"
            android:elevation="4dp"
            app:layout_constraintDimensionRatio="1:1.6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@color/black" />

        <TextView
            android:id="@+id/tv_detail_book_title"
            style="@style/H3Bd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_detail_book_cover"
            tools:text="아무튼, 여름" />

        <TextView
            android:id="@+id/tv_detail_book_author"
            style="@style/H2Md"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_book_title"
            tools:text="김신회" />

        <TextView
            android:id="@+id/tv_detail_book_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:background="@color/peeka_red"
            android:paddingVertical="8dp"
            android:paddingStart="14dp"
            android:text="한 마디"
            android:textColor="@color/peeka_white"
            style="@style/H2Md"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_book_author" />

        <TextView
            android:id="@+id/tv_detail_getContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/shape_whitefill_redline_0_rect"
            android:gravity="top"
            style="@style/H2Md"
            android:paddingVertical="12dp"
            android:paddingHorizontal="14dp"
            android:textColor="@color/peeka_red"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_book_content"
            tools:text="한 마디 전체" />

        <TextView
            android:id="@+id/tv_detail_book_memo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            android:background="@color/peeka_red"
            android:paddingVertical="8dp"
            android:paddingStart="14dp"
            android:text="메모"
            style="@style/H2Md"
            android:textColor="@color/peeka_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_getContent" />

        <TextView
            android:id="@+id/et_detail_getMemo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/shape_whitefill_redline_0_rect"
            android:gravity="top"
            android:textColor="@color/peeka_red"
            android:textSize="15dp"
            style="@style/H2Md"
            android:paddingVertical="12dp"
            android:paddingHorizontal="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_book_memo"
            tools:text="메모 전체" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>