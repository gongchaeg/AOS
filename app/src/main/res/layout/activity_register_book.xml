<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.sopt.peekabookaos.presentation.registerBook.RegisterBookViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/peeka_beige"
        tools:context=".presentation.registerBook.RegisterBookActivity">

        <ImageButton
            android:id="@+id/btn_register_book_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:background="@null"
            android:src="@drawable/ic_register_book_close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_register_book_activity_title"
            style="@style/H3Bd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_book_title"
            android:textColor="@color/peeka_red"
            app:layout_constraintBottom_toBottomOf="@id/btn_register_book_close"
            app:layout_constraintEnd_toStartOf="@id/btn_register_book_save"
            app:layout_constraintStart_toEndOf="@id/btn_register_book_close"
            app:layout_constraintTop_toTopOf="@id/btn_register_book_close" />

        <ImageButton
            android:id="@+id/btn_register_book_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:background="@null"
            android:src="@drawable/ic_register_book_save"
            app:layout_constraintBottom_toBottomOf="@id/tv_register_book_activity_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_register_book_activity_title" />

        <ImageView
            android:id="@+id/iv_register_book_image"
            setImage="@{vm.registerBookData.img}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:background="@color/peeka_beige"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_register_book_activity_title"
            tools:src="@color/peeka_g_1" />

        <TextView
            android:id="@+id/tv_register_book_title"
            style="@style/H3Bd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@{vm.registerBookData.title}"
            android:textColor="@color/peeka_red"
            app:layout_constraintEnd_toEndOf="@id/iv_register_book_image"
            app:layout_constraintStart_toStartOf="@id/iv_register_book_image"
            app:layout_constraintTop_toBottomOf="@id/iv_register_book_image"
            tools:text="아무튼, 여름" />

        <TextView
            android:id="@+id/tv_register_book_author"
            style="@style/H2Md"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@{vm.registerBookData.author}"
            android:textColor="@color/peeka_red"
            app:layout_constraintEnd_toEndOf="@id/tv_register_book_title"
            app:layout_constraintStart_toStartOf="@id/tv_register_book_title"
            app:layout_constraintTop_toBottomOf="@id/tv_register_book_title"
            tools:text="김신회" />

        <TextView
            android:id="@+id/tv_register_book_comment"
            style="@style/Bd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:background="@color/peeka_red"
            android:paddingVertical="8dp"
            android:paddingStart="14dp"
            android:text="@string/register_book_comment"
            android:textColor="@color/peeka_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_register_book_author"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/et_register_book_comment"
            style="@style/H2Md"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/shape_whitefill_redline_0_rect"
            android:gravity="top"
            android:hint="@string/register_book_comment_hint"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:maxLength="200"
            android:paddingHorizontal="14dp"
            android:paddingVertical="12dp"
            android:text="@={vm.comment}"
            android:textColor="@color/peeka_red"
            android:textColorHint="@color/peeka_g_1"
            app:layout_constraintDimensionRatio="1.6"
            app:layout_constraintEnd_toEndOf="@id/tv_register_book_comment"
            app:layout_constraintStart_toStartOf="@id/tv_register_book_comment"
            app:layout_constraintTop_toBottomOf="@id/tv_register_book_comment" />

        <TextView
            android:id="@+id/tv_register_book_comment_count"
            style="@style/H2Md"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{@string/register_book_comment_count(vm.comment.length())}"
            android:textColor="@color/peeka_g_2"
            app:layout_constraintEnd_toEndOf="@id/et_register_book_comment"
            app:layout_constraintTop_toBottomOf="@id/et_register_book_comment"
            tools:text="0/200" />

        <TextView
            android:id="@+id/tv_register_book_memo"
            style="@style/Bd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/peeka_red"
            android:paddingVertical="8dp"
            android:paddingStart="14dp"
            android:text="@string/register_book_memo"
            android:textColor="@color/peeka_white"
            app:layout_constraintEnd_toEndOf="@id/tv_register_book_comment"
            app:layout_constraintStart_toStartOf="@id/tv_register_book_comment"
            app:layout_constraintTop_toBottomOf="@id/tv_register_book_comment_count"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/et_register_book_memo"
            style="@style/H2Md"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/shape_whitefill_redline_0_rect"
            android:gravity="top"
            android:hint="@string/register_book_memo_hint"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:maxLength="50"
            android:paddingHorizontal="14dp"
            android:paddingVertical="12dp"
            android:text="@={vm.memo}"
            android:textColor="@color/peeka_red"
            android:textColorHint="@color/peeka_g_1"
            app:layout_constraintDimensionRatio="5"
            app:layout_constraintEnd_toEndOf="@id/tv_register_book_memo"
            app:layout_constraintStart_toStartOf="@id/tv_register_book_memo"
            app:layout_constraintTop_toBottomOf="@id/tv_register_book_memo" />

        <TextView
            android:id="@+id/tv_register_book_memo_count"
            style="@style/H2Md"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{@string/register_book_memo_count(vm.memo.length())}"
            android:textColor="@color/peeka_g_2"
            app:layout_constraintEnd_toEndOf="@id/et_register_book_memo"
            app:layout_constraintTop_toBottomOf="@id/et_register_book_memo"
            tools:text="0/200" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>